# Production Environment Configuration
# Balanced Multi-Purpose Computational Social Science Framework

# Application Settings
ENV=production
DEBUG=false
LOG_LEVEL=warning
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Configuration
DB_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://theory_user:${DB_PASSWORD}@postgres:5432/theory_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Security Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=20

# Performance Settings
MAX_WORKERS=8
WORKER_TIMEOUT=120
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30

# Purpose Balance Configuration
BALANCE_MONITORING=true
BALANCE_THRESHOLD=0.03
ANTI_BIAS_ENABLED=true
CAUSAL_BIAS_THRESHOLD=0.15
BALANCE_ALERT_EMAIL=admin@yourdomain.com

# Processing Configuration
MAX_THEORY_LENGTH=50000
MAX_CONCURRENT_REQUESTS=25
PROCESSING_TIMEOUT=30
VOCABULARY_MIN_TERMS=5
SCHEMA_MIN_ENTITIES=3
REASONING_MIN_STEPS=2

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_HIT_RATIO_TARGET=0.85

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password-here
PROMETHEUS_RETENTION=30d
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=alerts@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
SSL_CIPHERS=ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/theory_processor.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10
LOG_ROTATE_WHEN=midnight
SYSLOG_ENABLED=false
ELASTICSEARCH_ENABLED=true

# Feature Flags
ADVANCED_REASONING=true
CROSS_PURPOSE_INTEGRATION=true
MULTI_DOMAIN_SUPPORT=true
REAL_TIME_PROCESSING=true
BATCH_PROCESSING=true
API_VERSIONING=true

# Quality Assurance
QA_ENABLED=true
QA_ACCURACY_THRESHOLD=0.85
QA_RESPONSE_TIME_THRESHOLD=2000
QA_ERROR_RATE_THRESHOLD=0.05
QA_BALANCE_THRESHOLD=0.03

# Scalability Settings
AUTO_SCALING=true
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=70
SCALE_DOWN_THRESHOLD=30
SCALING_COOLDOWN=300

# Development and Testing (disabled in production)
DEV_MODE=false
TEST_MODE=false
PROFILING_ENABLED=false
DEBUG_TOOLBAR=false
MOCK_EXTERNAL_SERVICES=false